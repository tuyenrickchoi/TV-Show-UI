<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rssela57b31g"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF0D0D0D"
        android:paddingTop="11dp"
        android:paddingBottom="246dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/r5m36ka0mics"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="123dp"
                android:layout_marginHorizontal="15dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/rh2r98cn1zra"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:layout_marginBottom="68dp"
                android:layout_marginStart="91dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Đăng nhập"
                />
            <EditText
                android:inputType="text"
                android:text="Tài khoản"
                android:id="@+id/riy34p9oghuf"
                android:textColor="#7A7A7A"
                android:textSize="12sp"
                android:layout_marginBottom="28dp"
                android:layout_marginHorizontal="39dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sff535353sw1cr4bff000000"
                android:paddingVertical="17dp"
                android:paddingHorizontal="12dp"
                />
            <LinearLayout
                android:id="@+id/rgjfq48ja46m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/sff535353sw1cr4bff000000"
                android:paddingVertical="15dp"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="17dp"
                android:layout_marginHorizontal="39dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/r4xqulr76zjo"
                    android:textColor="#7A7A7A"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Mật khâu"
                    />
                <ImageView
                    android:id="@+id/rud1vl0roobk"
                    android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/r352hrf9bgcv"
                android:textColor="#7A7A7A"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="40dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Forgot the Password ? Reset Password"
                />
            <LinearLayout
                android:id="@+id/r71uyfnwvywo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/cr4bffdce027"
                android:paddingVertical="18dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="39dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rgqrkpur0lbw"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Đăng nhập"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/r1qeh85qy1i6"
                android:textColor="#7A7A7A"
                android:textSize="12sp"
                android:layout_marginStart="40dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Don't have an account yet?"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>